{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cpp.exe build active file",
            "command": "C:\\HM\\Microsoft VS Code\\mingw64\\bin\\cpp.exe",
            "args": [
                "-g",
                "${file}",
                // "${workspaceFolder}\\*.cpp",  //生成多个文件，替换 "${file}"
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\HM\\Microsoft VS Code\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                // ${workspaceFolder}\\*.cpp  //生成多个文件，替换 "${file}"
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}